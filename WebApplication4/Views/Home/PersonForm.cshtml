@model PersonModel;

@{
    ViewData["Title"] = "Person Form";
}

<form id="person_form" method="post" action="/Home/PersonSave">
    <input type="hidden" name="id" value="@Model.id"/>
    <p><label for="name">Name: </label><input input id="person_form_name" name="name" value="@Model.name" /></p>
    <p>
        <label for="jobId">Job: </label>
        <select name="jobId">
            <option id="person_form_job" value="1">-- Select a Job --</option>
            @foreach (var job in PersistentModel.Instance.jobs) {
                <option value="@job.id">@job.name</option>
            }
        </select>
    </p>
    <p><label input for="salary">Salary: </label><input  id="person_form_salary" name="salary"  value="@Model.salary"/></p>
    <p><button input id="person_form_submit" type="submit">Submit</button></p>
</form>